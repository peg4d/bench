<!--
	Element			mediatype	required
	Description		How the content was published. print, web, audio, video or image

-->

<!ELEMENT mediatype1 (#PCDATA)>
<!--
	Element			mediatype1	optional
	Description		More spesific mediatype description

-->

<!ELEMENT mediatype2 (#PCDATA)>
<!--
	Element			mediatype2	optional
	Description		Even more spesific mediatype description

-->


<!ELEMENT mediaformat (#PCDATA)>
<!--
	Element			mediaformat	optional
	Description		pdf, wav, jpeg...

-->


<!ELEMENT source EMPTY>
<!ATTLIST source
	id			CDATA		#REQUIRED
	name			CDATA		#REQUIRED
